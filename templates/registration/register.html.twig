{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
input[type="checkbox"] {
    display: block;
}
</style>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="container" style="padding-top:3rem">
    <div class="card" style="padding:1rem 5rem 1rem 5rem;">
    <h1>Register</h1>

    {{ form_start(registrationForm, {'attr': {'id': 'my-form','class':'my-form'}}) }}
    {{ form_row(registrationForm.names) }}
    {{ form_row(registrationForm.phone) }}
    {{ form_row(registrationForm.address) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
