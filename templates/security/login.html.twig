{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<style>

@media only screen and (max-width: 640){
    .bnsised{
        width:100%;
       
    }
    #imgstd{
        display:none;
    }
}
</style>
<div class="container" style="padding-top:6rem">
<form method="post"  class="my-form" id="my-form">

    {% if error %}
        <div >{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="col-lg-12">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="card bnsised">
    <div class="row">
    <div class="col-lg-6" >
    <h1 class="h3" style="margin-left:5px">Please sign in</h1>
    <div class="row">
    <div class="col-lg-12" style="margin-left:5px">
    
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
    
    </div>
    </div>
    <div class="row">
    <div class="col-lg-12"  style="margin-left:5px">
    
    <br>
    <label for="inputPassword" >Password</label>
    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    
    </div>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="row">
    <div class="col-lg-12" style="margin-left:5px">
 
    <br>
    <button class="btn-grid" type="submit">
        Sign in
    </button>

    <br>
    <h4><a href="{{path('app_register ')}}">Or Sign up</a></h4>

    </div>
    </div>
    </div>
    <div class="col-lg-6">
    <img src="{{asset('img/stade2.jpg')}}" id="imgstd" style="width:100%;height:auto;">

    </div>
    </div>
    </div>
</form>
</div>
{% endblock %}
